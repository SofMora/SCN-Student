<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

    <!-- PRE LOADER -->
    <section class="preloader">
        <div class="spinner">

            <span class="spinner-rotate"></span>

        </div>
    </section>


    <!-- MENU -->
<section class="navbar custom-navbar navbar-fixed-top">
    <div>

        <div>
            <button class="navbar-toggle" id="menu-toggle">
                <span class="icon icon-bar"></span>
              
            </button>
        </div>

    </div>
</section>



    <!-- PROFILE PICTURE -->

    <div class="profile-container" style="display: none; text-align: center;">
        <img id="profile-pic" src="/images/default-user.png" alt="Profile Picture" style="width: 100px; height: 100px; border-radius: 50%;">
        <h2 id="profile-name">Nombre del Usuario</h2>
        <button onclick="openModal1()">Edit</button>
    </div>


    <!-- Modal -->
    <div id="edit-modal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden">
        <div class="bg-white p-6 rounded-lg shadow-lg w-80">
            <h3 class="text-lg font-semibold mb-4">Edit Profile</h3>

            <!-- New Name -->
            <input id="new-name" type="text" placeholder="Enter new name" class="w-full p-2 border rounded mb-3">

            <!-- New Profile URL -->
            <input id="profile-url" type="url" placeholder="Enter profile URL" class="w-full p-2 border rounded mb-3">

            <!-- New Username -->
            <input id="new-username" type="text" placeholder="Enter new username" class="w-full p-2 border rounded mb-3">

            <!-- Description -->
            <textarea id="new-description" placeholder="Enter description" class="w-full p-2 border rounded mb-3"></textarea>


            <div class="flex justify-end space-x-2">
                <button onclick="saveChanges1()" class="submit-btn1">Save</button>
                <button onclick="closeModal1()" class="submit-btn1">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        // Función para abrir el modal
        function openModal1() {
            document.getElementById('edit-modal').classList.remove('hidden');
        }

        // Función para cerrar el modal
        function closeModal1() {
            document.getElementById('edit-modal').classList.add('hidden');
        }

        // Función para guardar los cambios
        function saveChanges1() {
            var newName = document.getElementById('new-name').value;
            var newPic = document.getElementById('new-pic').files[0];

            if (newName) {
                document.getElementById('profile-name').innerText = newName;
            }

            if (newPic) {
                document.getElementById('profile-pic').src = URL.createObjectURL(newPic);
            }

            closeModal();
        }
    </script>


    <section id="news" class="news-container">
        <h2 class="news-title">Últimas Noticias</h2>
        <div class="news-scroll">
            <!-- Aquí se insertarán las noticias dinámicamente con AJAX -->
        </div>
    </section>

    <!-- Modal para los comentarios -->
    <div id="commentsModal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h3>Comentarios</h3>
            <div id="commentsList"></div> <!-- Aquí se cargarán los comentarios -->
            <!-- Campo para agregar comentarios -->
            <textarea id="newComment" placeholder="Escribe tu comentario aquí..." rows="3"></textarea>
            </br>
            <button id="submitComment">Agregar comentario</button>
        </div>
    </div>

    <!-- Botón para abrir el modal -->
    <button class="open-modal-btn">Comentar</button>


    
    <!-- CONSULT -->
    <!-- CONSULTA PRIVADA -->


    <div id="consulta-modal" class="modal1">
        <div class="modal-content">
            <span class="close1" onclick="closeModal('consulta-modal')">&times;</span>
            <h2>Consulta Privada</h2>
            <p>Aquí puedes agendar una consulta con el profesor.</p>

            <!-- Campo para ingresar el asunto -->
            <label for="asunto">Asunto:</label>
            <input type="text" id="asunto" name="asunto" placeholder="Escribe el asunto aquí..." required>

            <!-- Campo para ingresar el mensaje -->
            <label for="mensaje">Mensaje:</label>
            <textarea id="mensaje" name="mensaje" rows="4" placeholder="Escribe tu mensaje aquí..." required></textarea>

            <!-- Botón para enviar -->
            <button class="btn consult" onclick="enviarConsulta()">Enviar Consulta</button>
        </div>
    </div>

 



    <div class="mt-5">
        <h3 class="text-center">Lista de Profesores</h3>
        <table class="table table-bordered table-hover mt-3">
            <thead class="table-dark">
                <tr>

                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody id="professorsTable">
                <!-- Datos cargados dinámicamente -->

            </tbody>
        </table>
    </div>

    <section class="consultation-forum">
        <div class="container">
            <h1>Foro de Consultas</h1>

            <!-- Formulario para agregar consulta -->
            <div class="consultation-form">
                <h3>Crear Consulta</h3>
                <form id="consultForm">
                    <label for="description">Descripción de la Consulta:</label>
                    </br>
                    <textarea id="description" required></textarea>
                    <br />
                    <label for="type">Tipo de Consulta:</label>
                    <input type="checkbox" id="public">
                    <span class="checkbox-label">Publica</span>

                    <input type="checkbox" id="private">
                    <span class="checkbox-label">Privada</span>

                    <br />
                    <label for="date">Fecha de la Consulta:</label>
                    <input type="datetime-local" id="date" required>
                    <br />

                    <label for="course">Curso:</label>
                    <select id="course" required>
                        <option value="">Seleccione un Curso</option>
                    </select>
                    <br />

                    <button type="submit">Enviar Consulta</button>
                </form>
            </div>
            <!-- Mostrar consultas -->
            <div id="consultations" class="consultations-list">
                <!-- Consulta 1 -->
                <div class="consultation-item">
                    <h4>Consulta 1</h4>
                    <p>Descripción de la consulta...</p>

                    <!-- Botón para ver los comentarios de la consulta -->
                    <button class="view-comments btn btn-primary" data-consult-id="1">Ver Comentarios</button>
                </div>

                <!-- Consulta 2 -->
                <div class="consultation-item">
                    <h4>Consulta 2</h4>
                    <p>Descripción de otra consulta...</p>

                    <!-- Botón para ver los comentarios de la consulta -->
                    <button class="view-comments btn btn-primary" data-consult-id="2">Ver Comentarios</button>
                </div>
            </div>

            <!-- Modal para los comentarios -->
            <div id="commentsModal" class="modal" style="display: none;">
                <div class="modal-content">
                    <span class="close-btn">&times;</span>
                    <h3>Comentarios</h3>
                    <div id="commentsList">
                        <!-- Los comentarios de la consulta se cargarán aquí -->
                    </div>
                    <!-- Campo para agregar comentarios -->
                    <textarea id="newComment" placeholder="Escribe tu comentario aquí..." rows="3"></textarea>
                    </br>
                    <button id="submitComment">Agregar comentario</button>
                </div>
            </div>

            
    </section>




    <div id="loginModal" class="modal">
        <div class="modal-content">
            <span class="close-btn" id="closeModal">&times;</span>

          

            <!-- Tabs for Login and Register -->
            <div class="tab-container">
                <button class="tab-button active" id="loginTab">Iniciar sesión</button>
                <button class="tab-button" id="registerTab">Registrarse</button>
            </div>

            <!-- Login Form (default view) -->
            <div class="form-container" id="loginFormContainer">
                <h2>Iniciar sesión</h2>
                <form id="loginForm">
                    <input type="text" id="username" placeholder="Usuario" required>
                    <br />
                    <input type="password" id="password" placeholder="Contraseña" required>
                    <br />
                    <button type="submit" id="loginButton">Iniciar sesión</button>
                </form>
            </div>

            <div class="form-container" id="registerFormContainer" style="display: none;">
                <h2>Registrarse</h2>
                <form id="registerForm">
                    <input type="text" id="name" placeholder="Nombre" required maxlength="50">
                    <br />
                    <input type="text" id="lastName" placeholder="Apellido" required maxlength="50">
                    <br />
                    <input type="email" id="email" placeholder="Correo electrónico" required maxlength="50">
                    <br />
                    <input type="text" id="userName" placeholder="Usuario" required maxlength="50">
                    <br />
                    <input type="password" id="passwordRegister" placeholder="Contraseña" required maxlength="50">
                    <br />
                    <button type="submit" id="registerButton">Registrarse</button>
                </form>
            </div>

        </div>
    </div>





    <!-- FOOTER -->
    <footer id="footer">
    </footer>
    <script>
        // Función para abrir el modal
        function openModal(modalId) {
            document.getElementById(modalId).style.display = 'flex';  // Muestra el modal
        }

        // Función para cerrar el modal
        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';  // Oculta el modal
        }

        // Función para guardar cambios en el perfil
        function saveChanges1() {
            var newName = document.getElementById('new-name').value;
            var newPic = document.getElementById('new-pic').files[0];
            var profileUrl = document.getElementById('profile-url').value;
            var newUsername = document.getElementById('new-username').value;
            var description = document.getElementById('new-description').value;
            var facebookLink = document.getElementById('facebook-link').value;
            var twitterLink = document.getElementById('twitter-link').value;
            var linkedinLink = document.getElementById('linkedin-link').value;

            // Actualiza el nombre y la foto de perfil
            if (newName) {
                document.getElementById('profile-name').innerText = newName;
            }

            if (newPic) {
                document.getElementById('profile-pic').src = URL.createObjectURL(newPic);
            }

            // Aquí puedes actualizar otros campos según lo necesites
            console.log('Profile URL:', profileUrl);
            console.log('Username:', newUsername);
            console.log('Description:', description);
            console.log('Facebook:', facebookLink);
            console.log('Twitter:', twitterLink);
            console.log('LinkedIn:', linkedinLink);

            closeModal('edit-modal'); // Cierra el modal después de guardar los cambios
        }

        // Función para enviar la consulta
        function enviarConsulta() {
            let asunto = document.getElementById('asunto').value;
            let mensaje = document.getElementById('mensaje').value;

            if (asunto.trim() === "" || mensaje.trim() === "") {
                alert("Por favor, completa todos los campos.");
                return;
            }

            // Aquí puedes hacer algo con los datos, como enviarlos a un servidor
            console.log("Asunto:", asunto);
            console.log("Mensaje:", mensaje);

            alert("Consulta enviada correctamente.");

            // Cerrar modal después de enviar
            closeModal('consulta-modal');
        }
    </script>

