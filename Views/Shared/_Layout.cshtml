    <script>
        // Función para abrir el modal
        function openModal(modalId) {
            document.getElementById(modalId).style.display = 'flex';  // Muestra el modal
        }

        // Función para cerrar el modal
        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';  // Oculta el modal
        }

        // Función para guardar cambios en el perfil
        function saveChanges1() {
            var newName = document.getElementById('new-name').value;
            var newPic = document.getElementById('new-pic').files[0];
            var profileUrl = document.getElementById('profile-url').value;
            var newUsername = document.getElementById('new-username').value;
            var description = document.getElementById('new-description').value;
            var facebookLink = document.getElementById('facebook-link').value;
            var twitterLink = document.getElementById('twitter-link').value;
            var linkedinLink = document.getElementById('linkedin-link').value;

            // Actualiza el nombre y la foto de perfil
            if (newName) {
                document.getElementById('profile-name').innerText = newName;
            }

            if (newPic) {
                document.getElementById('profile-pic').src = URL.createObjectURL(newPic);
            }

            // Aquí puedes actualizar otros campos según lo necesites
            console.log('Profile URL:', profileUrl);
            console.log('Username:', newUsername);
            console.log('Description:', description);
            console.log('Facebook:', facebookLink);
            console.log('Twitter:', twitterLink);
            console.log('LinkedIn:', linkedinLink);

            closeModal('edit-modal'); // Cierra el modal después de guardar los cambios
        }

        // Función para enviar la consulta
        function enviarConsulta() {
            let asunto = document.getElementById('asunto').value;
            let mensaje = document.getElementById('mensaje').value;

            if (asunto.trim() === "" || mensaje.trim() === "") {
                alert("Por favor, completa todos los campos.");
                return;
            }

            // Aquí puedes hacer algo con los datos, como enviarlos a un servidor
            console.log("Asunto:", asunto);
            console.log("Mensaje:", mensaje);

            alert("Consulta enviada correctamente.");

            // Cerrar modal después de enviar
            closeModal('consulta-modal');
        }
    </script>

